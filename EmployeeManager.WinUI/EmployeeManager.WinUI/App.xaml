<Application
    x:Class="EmployeeManager.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EmployeeManager.WinUI">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Other merged dictionaries here -->
      </ResourceDictionary.MergedDictionaries>
      <!-- Other app resources here -->
      
      <!-- These resources "override" a few default fontsizes for the application-->
      <x:Double x:Key="ControlContentThemeFontSize">18</x:Double>
      <x:Double x:Key="ContentControlFontSize">18</x:Double>
      <x:Double x:Key="TextStyleLargeFontSize">20</x:Double>
      <x:Double x:Key="TextStyleExtraLargeFontSize">22</x:Double>
    </ResourceDictionary>
  </Application.Resources>
</Application>
